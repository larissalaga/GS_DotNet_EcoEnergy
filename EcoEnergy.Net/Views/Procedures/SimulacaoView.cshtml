@model EcoEnergy.ViewModels.ProceduresViewModel

@{
    ViewData["Title"] = "Simulação";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="max-width: 800px;">
    <h1 class="text-center display-5 fw-bold mb-4" style="color: #2e2e2e;">Inserir Nova Simulação</h1>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <form method="post" asp-action="SimulacaoView" asp-controller="Procedures">
        <div class="mb-4">
            <label asp-for="NrConsumoMensal" class="form-label" style="color: #2e2e2e; font-size: 1.2rem;">Consumo Mensal (kWh)</label>
            <input asp-for="NrConsumoMensal" class="form-control" style="background-color: #d0d8e8;" placeholder="Digite o consumo mensal" required />
            <span asp-validation-for="NrConsumoMensal" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="NrAreaPlaca" class="form-label" style="color: #2e2e2e; font-size: 1.2rem;">Área da Placa (m²)</label>
            <input asp-for="NrAreaPlaca" class="form-control" style="background-color: #d0d8e8;" placeholder="Digite a área da placa" required />
            <span asp-validation-for="NrAreaPlaca" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="IdUsuario" class="form-label" style="color: #2e2e2e; font-size: 1.2rem;">Usuário Associado</label>
            <select asp-for="IdUsuario" asp-items="Model.Usuarios" class="form-control" style="background-color: #d0d8e8;" required>
                <option value="">Selecione um usuário...</option>
            </select>
            <span asp-validation-for="IdUsuario" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="IdEndereco" class="form-label" style="color: #2e2e2e; font-size: 1.2rem;">Endereço Associado</label>
            <select asp-for="IdEndereco" asp-items="Model.Enderecos" class="form-control" style="background-color: #d0d8e8;" required>
                <option value="">Selecione um endereço...</option>
            </select>
            <span asp-validation-for="IdEndereco" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn px-5 py-2" style="background-color: #2e2e2e; color: white; font-size: 1.2rem;">Salvar</button>
        </div>
    </form>

    <div class="text-center mt-3">
        <a href="@Url.Action("MenuProcedures", "Procedures")" class="btn px-5 py-2" style="background-color: #e6e8d0; color: black; font-size: 1.2rem;">Voltar</a>
    </div>

    <div class="text-center mt-3">
        <a href="@Url.Action("ListarSimulacoes", "Procedures")" class="btn px-5 py-2" style="background-color: #d0d8e8; color: black; font-size: 1.2rem;">Ver todas as Simulações</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
