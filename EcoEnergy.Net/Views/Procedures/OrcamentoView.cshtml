@model EcoEnergy.ViewModels.ProceduresViewModel

@{
    ViewData["Title"] = "Orçamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="max-width: 800px;">
    <h1 class="text-center display-5 fw-bold mb-4" style="color: #2e2e2e;">Inserir Novo Orçamento</h1>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
    <form method="post" asp-action="OrcamentoView" asp-controller="Procedures">
        <div class="mb-4">
            <label asp-for="NrValorProposto" class="form-label" style="color: #2e2e2e; font-size: 1.2rem;">Valor Proposto</label>
            <input asp-for="NrValorProposto" class="form-control" style="background-color: #d0d8e8;" placeholder="Digite o valor proposto" required />
            <span asp-validation-for="NrValorProposto" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="DsPrazo" class="form-label" style="color: #2e2e2e; font-size: 1.2rem;">Prazo</label>
            <input asp-for="DsPrazo" class="form-control" style="background-color: #d0d8e8;" placeholder="Digite o prazo" required />
            <span asp-validation-for="DsPrazo" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="DtOrcamento" class="form-label" style="color: #2e2e2e; font-size: 1.2rem;">Data do Orçamento</label>
            <input asp-for="DtOrcamento" class="form-control" style="background-color: #d0d8e8;" required />
            <span asp-validation-for="DtOrcamento" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="DsServicos" class="form-label" style="color: #2e2e2e; font-size: 1.2rem;">Descrição dos Serviços</label>
            <textarea asp-for="DsServicos" class="form-control" style="background-color: #d0d8e8;" placeholder="Descreva os serviços ofertados" rows="3" required></textarea>
            <span asp-validation-for="DsServicos" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="IdSimulacao" class="form-label" style="color: #2e2e2e; font-size: 1.2rem;">ID da Simulação</label>
            <input asp-for="IdSimulacao" class="form-control" style="background-color: #d0d8e8;" placeholder="Digite o ID da simulação associada" required />
            <span asp-validation-for="IdSimulacao" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="IdEmpresa" class="form-label" style="color: #2e2e2e; font-size: 1.2rem;">ID da Empresa</label>
            <input asp-for="IdEmpresa" class="form-control" style="background-color: #d0d8e8;" placeholder="Digite o ID da empresa associada" required />
            <span asp-validation-for="IdEmpresa" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn px-5 py-2" style="background-color: #2e2e2e; color: white; font-size: 1.2rem;">Salvar</button>
        </div>
    </form>

    <div class="text-center mt-3">
        <a href="@Url.Action("MenuProcedures", "Procedures")" class="btn px-5 py-2" style="background-color: #e6e8d0; color: black; font-size: 1.2rem;">Voltar</a>
    </div>

    <div class="text-center mt-3">
        <a href="@Url.Action("ListarOrcamentos", "Procedures")" class="btn px-5 py-2" style="background-color: #d0d8e8; color: black; font-size: 1.2rem;">Ver todos os Orçamentos</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
