@model List<EcoEnergy.Models.Endereco>

@{
    ViewData["Title"] = "Listar Endereços";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="max-width: 90%;">
    <h1 class="text-center display-5 fw-bold mb-4" style="color: #2e2e2e;">Endereços Cadastrados</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <table class="table table-hover table-bordered" style="background-color: #f9f9f9;">
        <thead class="table-dark">
            <tr style="font-size: 1.2rem;">
                <th>ID</th>
                <th>CEP</th>
                <th>Logradouro</th>
                <th>Número</th>
                <th>Bairro</th>
                <th>Cidade</th>
                <th>Estado</th>
                <th>País</th>
                <th>Usuário</th>
                <th>Empresa</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var endereco in Model)
            {
                <tr class="table-light">
                    <td>@endereco.IdEndereco</td>
                    <td>@endereco.DsCep</td>
                    <td>@endereco.DsLogradouro</td>
                    <td>@endereco.NrLogradouro</td>
                    <td>@endereco.DsBairro</td>
                    <td>@endereco.DsCidade</td>
                    <td>@endereco.DsEstado</td>
                    <td>@endereco.DsPais</td>
                    <td>@(endereco.Usuario != null ? endereco.Usuario.NmUsuario : "N/A")</td>
                    <td>@(endereco.Empresa != null ? endereco.Empresa.NmEmpresa : "N/A")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a href="@Url.Action("EnderecoView", "Procedures")" class="btn px-5 py-2" style="background-color: #2e2e2e; color: white; font-size: 1.2rem;">Voltar</a>
    </div>
</div>
