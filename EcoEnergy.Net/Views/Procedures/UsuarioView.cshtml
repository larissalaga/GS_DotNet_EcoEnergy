@model EcoEnergy.ViewModels.ProceduresViewModel

@{
    ViewData["Title"] = "Usuário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="max-width: 800px;">
    <h1 class="text-center display-5 fw-bold mb-4" style="color: #2e2e2e;">Inserir Novo Usuário</h1>

    <form method="post" asp-action="UsuarioView" asp-controller="Procedures">
        <div class="mb-4">
            <label asp-for="NmUsuario" class="form-label" style="color: #2e2e2e; font-size: 1.2rem;">Nome do Usuário</label>
            <input asp-for="NmUsuario" class="form-control" style="background-color: #d0d8e8;" placeholder="Digite o nome do usuário" required />
            <span asp-validation-for="NmUsuario" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="DsEmail" class="form-label" style="color: #2e2e2e; font-size: 1.2rem;">Email</label>
            <input asp-for="DsEmail" class="form-control" style="background-color: #d0d8e8;" placeholder="Digite o email do usuário" required />
            <span asp-validation-for="DsEmail" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="NrTelefone" class="form-label" style="color: #2e2e2e; font-size: 1.2rem;">Telefone</label>
            <input asp-for="NrTelefone" class="form-control" style="background-color: #d0d8e8;" placeholder="Digite o telefone do usuário" required />
            <span asp-validation-for="NrTelefone" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="NrCpf" class="form-label" style="color: #2e2e2e; font-size: 1.2rem;">CPF</label>
            <input asp-for="NrCpf" class="form-control" style="background-color: #d0d8e8;" placeholder="Digite o CPF do usuário" required />
            <span asp-validation-for="NrCpf" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="IdEmpresa" class="form-label" style="color: #2e2e2e; font-size: 1.2rem;">ID da Empresa</label>
            <input asp-for="IdEmpresa" class="form-control" style="background-color: #d0d8e8;" placeholder="Digite o ID da empresa associada (opcional)" />
            <span asp-validation-for="IdEmpresa" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn px-5 py-2" style="background-color: #2e2e2e; color: white; font-size: 1.2rem;">Salvar</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
