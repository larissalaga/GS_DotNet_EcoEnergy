@model EcoEnergy.ViewModels.ProceduresViewModel

@{
    ViewData["Title"] = "Empresa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="max-width: 800px;">
    <h1 class="text-center display-5 fw-bold mb-4" style="color: #2e2e2e;">Inserir Nova Empresa</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="EmpresaView" asp-controller="Procedures" method="post">
        <div class="mb-4">
            <label for="NrCnpj" class="form-label" style="color: #2e2e2e; font-size: 1.2rem;">CNPJ</label>
            <input asp-for="NrCnpj" class="form-control" style="background-color: #d0d8e8;" placeholder="Digite o CNPJ da empresa">
            <span asp-validation-for="NrCnpj" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label for="NmEmpresa" class="form-label" style="color: #2e2e2e; font-size: 1.2rem;">Nome da Empresa</label>
            <input asp-for="NmEmpresa" class="form-control" style="background-color: #d0d8e8;" placeholder="Digite o nome da empresa">
            <span asp-validation-for="NmEmpresa" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label for="NrTelefone" class="form-label" style="color: #2e2e2e; font-size: 1.2rem;">Telefone</label>
            <input asp-for="NrTelefone" class="form-control" style="background-color: #d0d8e8;" placeholder="Digite o telefone da empresa">
            <span asp-validation-for="NrTelefone" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label for="DsEspecialidade" class="form-label" style="color: #2e2e2e; font-size: 1.2rem;">Especialidade</label>
            <textarea asp-for="DsEspecialidade" class="form-control" style="background-color: #d0d8e8;" placeholder="Descreva a especialidade da empresa" rows="3"></textarea>
            <span asp-validation-for="DsEspecialidade" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn px-5 py-2" style="background-color: #2e2e2e; color: white; font-size: 1.2rem;">Salvar</button>
        </div>
    </form>
    <div class="text-center mt-3">
        <a href="@Url.Action("ListarEmpresas", "Procedures")" class="btn px-5 py-2" style="background-color: #d0d8e8; color: black; font-size: 1.2rem;">Ver todas as empresas</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
