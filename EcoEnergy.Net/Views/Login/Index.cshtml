@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="container mt-5 text-center">
    <h1 class="display-5 mb-5" style="line-height: 1;">
        <span style="color: green; font-weight: bold;">ECO</span><span style="color: #2e2e2e; font-weight: bold;">ENERGY</span>
    </h1>

    <p class="lead">Por favor, faça login para continuar.</p>

    <div class="mt-4 mx-auto text-start" style="max-width: 400px;">
        <form method="post" asp-action="Login">            
            <div class="form-group mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Digite seu email" required>
            </div>

            <div class="form-group mb-4">
                <label for="password" class="form-label">Senha</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Digite sua senha" required>
            </div>

            <button type="submit" class="btn" style="background-color: #d0d8e8; color: black; width: 100%; padding: 10px; font-size: 1rem; border: none;">
                Entrar
            </button>
        </form>
    </div>
</div>